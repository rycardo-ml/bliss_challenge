<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lyt_randomEmoji_gl_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lyt_randomEmoji_gl_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75" />

    <ImageView
        android:id="@+id/lyt_randomEmoji_iv_emoji"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lyt_randomEmoji_tv_emoji"
        app:layout_constraintStart_toStartOf="@id/lyt_randomEmoji_gl_start"
        app:layout_constraintEnd_toEndOf="@id/lyt_randomEmoji_gl_end"
        app:layout_constraintVertical_chainStyle="packed"
        tools:srcCompat="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/lyt_randomEmoji_tv_emoji"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lyt_randomEmoji_iv_emoji"
        app:layout_constraintBottom_toTopOf="@+id/lyt_randomEmoji_bt_random"
        app:layout_constraintStart_toStartOf="@id/lyt_randomEmoji_gl_start"
        app:layout_constraintEnd_toEndOf="@id/lyt_randomEmoji_gl_end"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Emoji text"/>

    <Button
        android:id="@+id/lyt_randomEmoji_bt_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lyt_randomEmoji_tv_emoji"
        app:layout_constraintBottom_toTopOf="@id/lyt_randomEmoji_tv_list"
        app:layout_constraintStart_toStartOf="@id/lyt_randomEmoji_gl_start"
        app:layout_constraintEnd_toEndOf="@id/lyt_randomEmoji_gl_end"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="Random Emoji" />


    <TextView
        android:id="@+id/lyt_randomEmoji_tv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List All"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lyt_randomEmoji_bt_random"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/lyt_randomEmoji_gl_start"
        app:layout_constraintEnd_toEndOf="@id/lyt_randomEmoji_gl_end"
        app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>